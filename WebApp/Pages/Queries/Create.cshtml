@page
@model WebApp.Pages_Queries.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 style="text-align: center">Loo uus pöördumine</h1>
<hr />
<div class="row" style="justify-content: center; text-align: center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group" style="margin-bottom: 50px">
                <label class="control-label" style="margin-bottom: 10px">Kirjeldus</label>
                <textarea asp-for="Query.Description" rows="3" class="form-control"></textarea>
                <span asp-validation-for="Query.Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label class="control-label" style="margin-bottom: 10px">Lahendamise tähtaeg</label>
                <input asp-for="Query.Deadline" class="form-control" />
                <span asp-validation-for="Query.Deadline" class="text-danger"></span>
            </div>
            
            <div class="form-group" style="margin-top: 10%; margin-bottom: 5%">
                <input type="submit" value="Loo Pöördumine" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<div class="text-center">
    <a class="btn btn-outline-dark" asp-page="../Index">Mine tagasi</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
